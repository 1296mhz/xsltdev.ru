{
	"printWidth": 80,
	"useTabs": true,
	"tabWidth": 4,
	"semi": false,
	"singleQuote": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ".pages",
			"options": {
				"parser": "markdown",
				"useTabs": false,
				"tabWidth": 4
			}
		}
	]
}
